<resources>
    <!-- Base application theme. -->
    <style name="Theme.TravelGuide" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowFullscreen">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="home_tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:capitalize">characters</item>
    </style>

    <style name="trip_tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:capitalize">characters</item>
    </style>

    <style name="guide_tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textColor">#0048F0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:capitalize">characters</item>
    </style>


</resources>